<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Elija un idioma"
        android:id="@+id/elijeIdioma"
        android:textColor="#000000"
        android:textSize="45dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_marginTop="198dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/hirageasy"
        android:layout_alignBottom="@+id/elijeIdioma"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIngles"
        android:background="@android:color/transparent"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/elijeIdioma"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEspanol"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/btnIngles"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPortugues"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/btnEspanol"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/giv_demo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/usa4"
        android:layout_alignBottom="@+id/btnIngles"
        android:layout_alignRight="@+id/btnIngles"
        android:layout_alignEnd="@+id/btnIngles"
        android:layout_marginBottom="-25dp"
        android:layout_marginRight="0dp" />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/giv_demo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/costa4"
        android:layout_alignTop="@+id/giv_demo"
        android:layout_centerHorizontal="true" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/giv_demo2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/brasil3"
        android:layout_alignTop="@+id/giv_demo1"
        android:layout_alignLeft="@+id/btnPortugues"
        android:layout_alignStart="@+id/btnPortugues"
        android:layout_marginLeft="0dp" />

</RelativeLayout>
