<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrador.nuevomenu.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/EstiloLibre"
        android:id="@+id/estiloLibreBtn"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/Letras"
        android:id="@+id/competitivoBtn"
        android:layout_below="@+id/estiloLibreBtn"
        android:layout_alignLeft="@+id/estiloLibreBtn"
        android:layout_alignStart="@+id/estiloLibreBtn"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/Frases"
        android:id="@+id/frasesBtn"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/competitivoBtn"
        android:layout_alignLeft="@+id/competitivoBtn"
        android:layout_alignStart="@+id/competitivoBtn" />

    <Button
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/Adivina"
        android:id="@+id/adivinaBtn"
        android:layout_below="@+id/frasesBtn"
        android:layout_alignLeft="@+id/frasesBtn"
        android:layout_alignStart="@+id/frasesBtn"
        android:layout_marginTop="30dp" />
</RelativeLayout>
